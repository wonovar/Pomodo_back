<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상을 흰색으로 설정 -->
    <solid android:color="#FFFFFF"/>

    <!-- 테두리 색상과 두께 설정 -->
    <stroke
        android:width="2dp"
        android:color="#000000"/>

    <!-- 모서리를 둥글게 설정 -->
    <corners android:radius="10dp"/>

    <!-- 내부 패딩 설정 -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>